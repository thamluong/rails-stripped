<fieldset>
  <legend>Resend Unlock Instructions</legend>

	<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="form-group">
	    <%= f.label :email, class: 'col-lg-1 control-label' %>
	    <div class="col-lg-2">
	      <%= f.email_field :email, autofocus: true, size: 10, class: "form-control" %>
	    </div>
	  </div>

	  <div class="form-group">
	    <div class="col-lg-10 col-lg-offset-1">
		  <%= f.submit "Resend unlock instructions", class: 'btn btn-primary' %>	
	    </div>
	  </div>
	  
	<% end %>

	<%= render "devise/shared/links" %>
	
</fieldset>






