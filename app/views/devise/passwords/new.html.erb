<fieldset>
	<legend>Forgot your password? </legend>
	
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="form-group">
	    <%= f.label :email, class: 'col-lg-1 control-label' %>
	    <div class="col-lg-2">
	      <%= f.email_field :email, autofocus: true, size: 10, class: "form-control" %>
	    </div>
	  </div>

	  <div class="form-group">
	    <div class="col-lg-10 col-lg-offset-1">
		  <%= f.submit "Send Me Reset Password Instructions", class: 'btn btn-primary' %>	
	    </div>
	  </div>

	<% end %>
	
</fieldset>


